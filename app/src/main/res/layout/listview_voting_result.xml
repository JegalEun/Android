<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">
    
    <TextView
        android:id="@+id/tv_candidate_name"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:text="김갈백"
        android:layout_marginLeft="8.52dp"
        android:textColor="#474747">
    </TextView>
    
    <View
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="#CED4DA"
        android:layout_marginLeft="20dp">
    </View>

    <ProgressBar
        android:id="@+id/candidate_progress"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:max="100"
        android:progressDrawable="@drawable/progress_voting_result">

    </ProgressBar>
    
    <TextView
        android:id="@+id/tv_candidate_percent_detail"
        android:layout_width="28dp"
        android:layout_height="21dp"
        android:layout_marginLeft="20dp"
        android:text="75%">
    </TextView>

</LinearLayout>